<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_post_write" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:overScrollMode="always"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_overlay"
                android:layout_alignParentBottom="true"
                android:scrollbars="none">

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton android:id="@+id/bold"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_format_bold"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                    <ImageButton
                        android:id="@+id/italic"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_format_italic"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                    <ImageButton android:id="@+id/underline"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_format_underline"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                    <ImageButton android:id="@+id/strikethrough"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_format_strikethrough"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                    <ImageButton android:id="@+id/bullet"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_format_bullet"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                    <ImageButton android:id="@+id/quote"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_format_quote"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                    <ImageButton android:id="@+id/link"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_insert_link"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                    <ImageButton android:id="@+id/clear"
                        android:contentDescription="@null"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_format_clear"
                        android:scaleType="center"
                        android:background="?android:selectableItemBackground">
                    </ImageButton>

                </LinearLayout>

            </HorizontalScrollView>

            <io.github.mthli.knife.KnifeText
                android:id="@+id/knife"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:background="@color/white"
                android:gravity="top|start"
                android:hint="@string/post_hint"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:scrollbars="vertical"
                android:textColorHint="@color/black_overlay"
                app:bulletColor="@color/blue_500"
                app:bulletGapWidth="@dimen/bullet_gap_width"
                app:bulletRadius="@dimen/bullet_radius"
                app:historyEnable="true"
                app:historySize="99"
                app:linkColor="@color/blue_500"
                app:linkUnderline="true"
                app:quoteCapWidth="@dimen/quote_gap_width"
                app:quoteColor="@color/blue_500"
                app:quoteStripeWidth="@dimen/quote_stripe_width">
            </io.github.mthli.knife.KnifeText>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/post_bottomBar_bg"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/compose_toolbar_picture_auto" />

                <ImageView
                    android:id="@+id/mentionbutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/compose_mentionbutton_background_auto" />

                <ImageView
                    android:id="@+id/trendbutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/compose_trendbutton_background_auto" />

                <ImageView
                    android:id="@+id/emoticonbutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/compose_emoticonbutton_background_auto" />

                <ImageView
                    android:id="@+id/more_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/compose_toolbar_more_auto" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
